{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "extends": "eslint:recommended"
  },
  "rules": {
    "indent": [2, 2],
    "quotes": [ 1, "single", "avoid-escape" ],
    "semi": [ 2, "never" ],
    "brace-style": [ 2, "1tbs" ],
    "new-cap": 1,
    "strict": 1,
    "no-underscore-dangle": 0,
    "no-new": 0,
    "camelcase": 1,
    "no-trailing-spaces": 1,
    "no-multiple-empty-lines": 2,
    "no-irregular-whitespace": 1
  },
  "plugins": [
    "react"
  ]
}